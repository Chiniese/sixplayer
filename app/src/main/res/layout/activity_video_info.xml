<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.p2p.dsad.sixplayler.VideoInfoActivity">
<android.support.design.widget.AppBarLayout
    android:background="@color/appth"
    android:layout_width="match_parent"
    android:layout_height="240dp">
    <android.support.design.widget.CollapsingToolbarLayout
        android:id="@+id/coll_video_toolbatlayout"
        android:fitsSystemWindows="true"
        app:layout_scrollFlags="scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:background="@color/toptranslate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_video_imginfo"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.design.widget.CollapsingToolbarLayout>

</android.support.design.widget.AppBarLayout>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/float_video_play2"

        app:layout_behavior="@string/bye_burger_float_behavior"
        app:layout_anchor="@id/img_video_imginfo"
        app:layout_anchorGravity="bottom"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/ic_play_arrow_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <include
        android:id="@+id/parentsviews"
        layout="@layout/video_info"
        />

</android.support.design.widget.CoordinatorLayout>
